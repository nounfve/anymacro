{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
